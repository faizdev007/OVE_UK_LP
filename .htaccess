<IfModule mod_rewrite.c>
    RewriteEngine On

    # ===========================================================
    # 1️⃣ FORCE HTTPS
    # ===========================================================
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect only if host matches the old domain
    RewriteCond %{HTTP_HOST} ^(?:www\.)?optimalvirtualemployee\.co.uk$ [NC]
    RewriteRule ^(.*)$ https://optimalvirtualemployee.com/$1 [R=301,L]

    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # ===========================================================
    # 2️⃣ HANDLE AUTHORIZATION HEADER
    # ===========================================================
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ===========================================================
    # 3️⃣ REDIRECT TRAILING SLASHES IF NOT A FOLDER
    # ===========================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ===========================================================
    # 4️⃣ SEND REQUESTS TO FRONT CONTROLLER (index.php)
    # ===========================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>
